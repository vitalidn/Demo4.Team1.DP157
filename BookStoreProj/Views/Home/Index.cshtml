@{
    ViewData["Title"] = " MiniMoo Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" wrap="true">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="d-block w-100" src="~/images/pic1.jpg" alt="Booooks" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Read more - dive deep!
                </p>
            </div>
        </div>
        <div class="item">
            <img class="d-block w-100" src="~/images/pic2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Old book like an old friend
                </p>
            </div>
        </div>
        <div class="item">
            <img class="d-block w-100" src="~/images/pic3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Stay cool and take it easy...
                </p>
            </div>
        </div>
        <div class="item">
            <img class="d-block w-100" src="~/images/pic4.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Be like an OldMan
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>